CREATE TABLE person (
    _id	INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    surname TEXT NOT NULL,
    email TEXT NOT NULL,
    password TEXT NOT NULL,
    description TEXT NOT NULL,
    gender TEXT NOT NULL
);

CREATE TABLE place_fav(
    _id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    type TEXT NOT NULL,
    lat FLOAT,
    long FLOAT,
    address TEXT NOT NULL,
    review TEXT NOT NULL
);

CREATE TABLE pers_fav(
    id_fav INT PRIMARY KEY,
    id_pers INT PRIMARY KEY,
    FOREIGN KEY(id_pers) REFERENCES person(_id),
    FOREIGN KEY(id_fav) REFERENCES place_fav(_id)

);

CREATE TABLE place_recent(
    _id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    type TEXT NOT NULL,
    lat FLOAT,
    long FLOAT,
    address TEXT NOT NULL,
    review TEXT NOT NULL
);

CREATE TABLE pers_rec(
    id_rec INT PRIMARY KEY,
    id_pers INT PRIMARY KEY,
    FOREIGN KEY(id_pers) REFERENCES person(_id),
    FOREIGN KEY(id_rec) REFERENCES place_recent(_id)
);